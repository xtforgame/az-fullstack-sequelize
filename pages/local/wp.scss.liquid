
// ====================

.wp-block-columns {
  display: flex;
  overflow-x: hidden;
}

.wp-block-column {
  width: 50%;
  overflow-x: hidden;
}

// ====================

.wp-post-card-container {
  display: flex;
  flex-wrap: wrap;
  max-width: 1500px;
  justify-content: space-around;
  margin-left: auto;
  margin-right: auto;
}

.wp-post-card-inner-container {
  width: 445px;
}

.wp-post-card {
  width: 445px;
  // border: 1px solid black;
  // padding: 20px;
  margin: 24px;
  cursor: pointer;
  overflow: hidden;
  text-decoration: none;
}

.wp-post-card-media {
  width: 100%;
}

.wp-post-card-media-img {
  width: 100%;
  height: auto;
}

.wp-post-card-content {
  padding: 24px;
  text-decoration: none;
}

a {
  text-decoration: none !important;
}

.wp-post-card-title {
  font-family: Noto Sans TC;
  font-size: 20px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.45;
  letter-spacing: 2px;
  text-align: left;
  color: #464646;
}

.wp-post-card-date {
  font-family: Noto Sans TC;
  padding-top: 10px;
  font-size: 15px;
  font-weight: 300;
  font-stretch: normal;
  font-style: normal;
  line-height: 2.07;
  letter-spacing: 1.5px;
  text-align: left;
  color: #afafaf;
}

.wp-post-card-excerpt{
  font-family: Noto Sans TC;
  padding-top: 30px;
  font-size: 15px;
  font-weight: 300;
  font-stretch: normal;
  font-style: normal;
  line-height: 2.07;
  letter-spacing: 1.5px;
  text-align: left;
  color: #afafaf;
}

// ===============

.wp-article-container {
  max-width: 1480px;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

.wp-article-post-card-content > p,
.wp-article-post-card-content > h1,
.wp-article-post-card-content > h2,
.wp-article-post-card-content > h3,
.wp-article-post-card-content > h4,
.wp-article-post-card-content > h5,
.wp-article-post-card-content > h6 {
  margin-left: 20px;
  margin-right: 20px;
}

.wp-article-container figure {
  margin-inline-start: 20px;
  margin-inline-end: 20px;
}

.wp-article-container figure img {
  width: 100%;
  height: auto;
}

.wp-article-media {
  width: 100%;
}


