@font-face {
  font-family: OratorStd;
  src: url("/font/OratorStd.otf") format("opentype");
}


@mixin transform($property) {
  -webkit-transform: $property;
  -ms-transform: $property;
  transform: $property;
}

@mixin mflex($flex-direction: row) {
  display: flex;
  flex-direction: $flex-direction;
}

@mixin mfcvc {
  @include mflex(column);
  text-align: center;
  justify-content: center;
  align-items: center;
}

@mixin mfchc {
  @include mflex(row);
  text-align: center;
  justify-content: center;
  align-items: center;
}

@mixin headerfooter {
  background-color: var(--azg-theme-surface);
  padding-top: 24px;
  padding-bottom: 24px;
  padding-left: 60px;
  padding-right: 60px;
}

