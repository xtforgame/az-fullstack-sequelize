  margin-left: auto;
}

.flex-container {
  display: flex;
}

.flex1 {
  flex: 1;
}

.image-container {
  position: relative;
  background-position-x: center;
  background-position-y: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.text-mask {
  position: absolute;
  bottom: 0;
  color: white;
  width: 100%;
  height: 300px;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}

.float-text1 {
  letter-spacing: 5px;
  position: absolute;
  bottom: 80px;
  color: white;
  width: 100%;
  text-align: center;
  font-weight: 300;
  font-size: 46px;
}

.float-text2 {
  position: absolute;
  bottom: 40px;
  color: white;
  width: 100%;
  text-align: center;
  font-weight: 300;
  font-size: 40px;
}

.section-content {
  margin-top: 40px;
  color: #666666;
  line-height: 30px;
}

.flex-container-v-center {
  @include mfcvc;
}

.flex-container-f-center {
  @include mfchc;
  justify-content: space-evenly;
}

