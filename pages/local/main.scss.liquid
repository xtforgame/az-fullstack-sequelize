/* ================================= */
:root{
  --azg-theme-primary: #faefe3; /* rgb(250, 239, 227); */
  --azg-theme-on-primary: #936f4a; /* rgb(143, 113, 80); */
  --azg-theme-on-primary-header: #3c260f; /* rgb(143, 113, 80); */
  --azg-theme-surface: #fceee0; /* rgb(250, 239, 227); */
  --azg-theme-background: #fef8f3; /* rgb(252, 248, 244); */
  --azg-section-padding-top: 50px;
  --azg-section-padding-bottom: 50px;
}

div, span:not(.material-icons), p, h1, h2, h3, h4, h5, h6 {
  font-family: 'OratorStd', orator-std, 'Roboto', 'Noto Sans TC', sans-serif !important;
}
.section {
