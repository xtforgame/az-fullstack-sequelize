{
  "presets": [
    ["@babel/preset-env", {
      "targets": { 
        "node": "10"
      }
    }],
    "@babel/typescript"
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread"
  ],
  "env": {
    "development": {
      "plugins": [
        ["module-resolver", {
          "extensions": [".js", ".ts", ".jsx", ".tsx"],
          "alias": {
            "~": "./src/front-end",
            "common/config": "./src/common/configs/development",
            "common": "./src/common",
            "config": "./src/front-end/configs/development",
          }
        }]
      ]
    },
    "production": {
      "plugins": [
        ["module-resolver", {
          "extensions": [".js", ".ts", ".jsx", ".tsx"],
          "alias": {
            "~": "./src/front-end",
            "common/config": "./src/common/configs/production",
            "common": "./src/common",
            "config": "./src/front-end/configs/production",
          }
        }]
      ]
    },
    "test": {
      "plugins": [
        ["module-resolver", {
          "extensions": [".js", ".ts", ".jsx", ".tsx"],
          "alias": {
            "~": "./src/front-end",
            "common/config": "./src/common/configs/test",
            "common": "./src/common",
            "config": "./src/front-end/configs/test",
          }
        }]
      ]
    }
  }
}
